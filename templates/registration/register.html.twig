{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="form-container">
    <h1>ðŸŽ¬ Inscription</h1>
    
    {{ form_errors(registrationForm) }}
    
    {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_label(registrationForm.username, 'Nom d\'utilisateur') }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>
        
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        
        <div class="form-check">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions', {'label_attr': {'class': 'form-check-label'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>
        
        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
